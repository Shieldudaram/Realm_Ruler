Group #TimerHud {
  LayoutMode: Center;

  Group #Plaque {
    // Give the frame a bit more breathing room
    Anchor: (Top: 16, Width: 380, Height: 104);
    LayoutMode: Center;

    // Slightly less padding so the frame art isn't crushed
    Padding: (Horizontal: 8, Vertical: 8);

    // Lower the 9-slice border so it doesn't stretch bright edge pixels
    Background: (TexturePath: "TimerFrame.png", Border: 22);

    Group #Inset {
      // Match the plaque size minus padding
      Anchor: (Width: 364, Height: 88);
      LayoutMode: Top;

      // Reduce padding to avoid chopping the inset corners
      Padding: (Horizontal: 12, Vertical: 8);

      // Lower border here too
      Background: (TexturePath: "TimerInset.png", Border: 14);

      Label #TimerTitle {
        Style: LabelStyle(FontSize: 16, Alignment: Center);
        Anchor: (Width: 364, Height: 18);
        Text: "Capture The Flag";
      }

      Label #TimerLabel {
        Style: LabelStyle(FontSize: 40, Alignment: Center);
        Anchor: (Top: 2, Width: 364, Height: 56);
        Text: "15:00";
      }
    }
  }
}
